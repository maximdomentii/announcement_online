<!DOCTYPE html>
<html>
<head>
  <title>Announcements</title>
  <%= csrf_meta_tags %>

  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
</head>

<body>
<div class="header">
  <%= render 'layouts/header' %>
</div>
<div class="content">
  <div class="container">
    <div class="row sub-header shadow">
      <div class="col-md-2">
        <div class="add-announcement">
          <button type="button" class="btn btn-default" >
            <%= link_to 'Add announcement', new_announcements_path %>
          </button>
        </div>
      </div>
      <div class="col-md-10">
        <div class="search-bar">
          <%= render 'layouts/search-bar' %>
        </div>
      </div>
    </div>
    <div class="row content-min-height shadow">
      <div class="col-md-2">
        <%= render 'layouts/side-menu' %>
      </div>
      <div class="col-md-10">
        <p class="success"><%= flash[:success] %></p>
        <p class="error"><%= flash[:danger] %></p>
        <%= yield %>
      </div>
    </div>
  </div>
</div>
<div class="footer">
  <%= render 'layouts/footer' %>
</div>
</body>
</html>
