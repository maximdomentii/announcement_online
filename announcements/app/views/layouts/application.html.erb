<!DOCTYPE html>
<html>
<head>
  <title>Announcements</title>
  <%= csrf_meta_tags %>

  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
</head>

<body>
<div class="header">
  <%= render "layouts/header" %>
</div>
<div class="content">
  <div class="container">
    <div class="row">
      <div class="search-bar">

      </div>
    </div>
    <div class="row">
      <div class="col-md-2">
        <%= render "layouts/side-menu"%>
      </div>
      <div class="col-md-10">
        <p id="success"><%= flash[:success] %></p>
        <p id="danger"><%= flash[:danger] %></p>
        <%= yield %>
      </div>
    </div>
  </div>
</div>
<div class="footer">
  <%= render "layouts/footer" %>
</div>
</body>
</html>
