<div class="page-title"><span>Best Rated Announcements</span></div>

<% if @announcements.count == 0 %>
    <p>No rated announcements</p>
<% else %>
    <% @announcements.each do |announcement| %>
        <%= render partial: 'layouts/announcement-item', locals: { announcement: announcement } %>
    <% end %>
<% end %>