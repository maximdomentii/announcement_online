<div class="recommendations">
  <div class="row" id="most-recent">
    <div class="col-md-12">
      <div class="row recommendation-name page-title">
        <div class="col-md-10">
          <span>Most recent</span>
        </div>
      </div>
      <div class="row recommendation-items">
        <% get_most_recent.first(3).each do |announcement| %>
            <div class="col-md-4">
              <%= render partial: 'recommendation-item', locals: { announcement: announcement } %>
            </div>
        <% end %>
      </div>
      <div class="row recommendation-see-all">
        <div class="col-md-10">
          <%= link_to(pages_most_recent_path) do %>
              <span>Check more...</span>
          <% end %>
        </div>
      </div>
    </div>
  </div>
  <hr>
