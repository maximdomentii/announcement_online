<%= form_for([@announcement, @announcement.ratings.build], url: announcements_ratings_path(:announcement_id => @announcement.id)) do |f| %>
    <% if @announcement.errors.any? %>
        <div id="error_explanation">
          <h3>
            <%= pluralize(@announcement.errors.count, "error") %> prohibited
            you to rate this announcement:
          </h3>
          <ul>
            <% @announcement.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
    <% end %>

    <%= f.text_field :rank, class: "rating rating-loading", value: get_rating(@announcement), data: {min: 0, max: 5, step: 1}, 'data-size' => 'xs' %>

    <div class="form-group">
      <%= f.label :author %><br/>
      <%= f.text_field :author, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :comment %><br/>
      <%= f.text_area :comment, class: "form-control" %>
    </div>

    <%= f.submit "Send this rating", class: "btn btn-primary" %>
<% end %>
