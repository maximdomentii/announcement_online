<% if rating.id != nil %>
    <div class="announcement-rating">
      <p>
        <strong>Author:</strong>
        <%= rating.author %>
      </p>
      <p>
        <strong>Rank:</strong>
        <%= rating.rank %>
      </p>

      <p>
        <strong>Commnet:</strong>
        <%= rating.comment %>
      </p>

      <% if logged_in?  and current_user.role == 'admin' %>
          <%= link_to 'Delete this review', announcements_ratings_path(:id => rating.id, :announcement_id => @announcement.id),
                      method: :delete,
                      data: {confirm: 'Are you sure?' } %>
      <% end %>
    </div>
<% end %>
