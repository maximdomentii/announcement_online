<div class="page-title"><span>User list</span></div>

<hr>

<% @users.each do |user| %>
    <div class="row">
      <div class="col-md-3">
        <p><%= user.username %></p>
      </div>
      <div class="col-md-3">
        <p><%= user.email %></p>
      </div>
      <div class="col-md-3">
        <p><%= user.role %></p>
      </div>
      <div class="col-md-1">
        <%= link_to 'Show', user_path(user) %>
      </div>
      <div class="col-md-2">
        <% if user.username != 'admin' %>
            <%= link_to 'Delete user', user_path(user), method: :delete, data: { confirm: 'Are you sure?' } %>
        <% else %>
            <br>
        <% end %>
      </div>
    </div>
    <hr>
<% end %>

<%= link_to new_user_path do %>
    <button class="btn btn-default">Add new user</button>
<% end %>