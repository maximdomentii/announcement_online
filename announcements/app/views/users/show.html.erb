<div class="page-title"><span>My account settings</span></div>

<hr>

<div class="row">
  <div class="col-md-2">
    <p><strong>Name</strong></p>
  </div>
  <div class="col-md-8">
    <p><span><%= @user.firstname %> <%= @user.lastname %></span></p>
    <div id="edit-name-form"></div>
  </div>
  <div class="col-md-2">
    <% if current_user.username == @user.username %>
        <p><%= link_to 'Edit', users_new_edit_name_path(id: @user.id), :remote=>true , id: 'edit-name' %></p>
    <% else %>
        <br>
    <% end %>
  </div>
</div>
<hr>
<div class="row">
  <div class="col-md-2">
    <p><strong>Username</strong></p>
  </div>
  <div class="col-md-8">
    <p><%= @user.username %></p>
    <div id="edit-username-form"></div>
  </div>
  <div class="col-md-2">
    <% if current_user.username == @user.username %>
        <p><%= link_to 'Edit', users_new_edit_username_path(id: @user.id), :remote=>true , id: 'edit-username' %></p>
    <% else %>
        <br>
    <% end %>
  </div>
</div>
<hr>
<div class="row">
  <div class="col-md-2">
    <p><strong>Email</strong></p>
  </div>
  <div class="col-md-8">
    <p><%= @user.email %></p>
    <div id="edit-email-form"></div>
  </div>
  <div class="col-md-2">
    <% if current_user.username == @user.username %>
        <p><%= link_to 'Edit', users_new_edit_email_path(id: @user.id), :remote=>true , id: 'edit-email' %></p>
    <% else %>
        <br>
    <% end %>
  </div>
</div>
<hr>
<div class="row">
  <div class="col-md-2">
    <p><strong>Telephone</strong></p>
  </div>
  <div class="col-md-8">
    <p><%= @user.phone %></p>
    <div id="edit-phone-form"></div>
  </div>
  <div class="col-md-2">
    <% if current_user.username == @user.username %>
        <p><%= link_to 'Edit', users_new_edit_phone_path(id: @user.id), :remote=>true , id: 'edit-phone' %></p>
    <% else %>
        <br>
    <% end %>
  </div>
</div>
<hr>
<div class="row">
  <div class="col-md-2">
    <p><strong>Password</strong></p>
  </div>
  <div class="col-md-8">
    <br>
    <div id="edit-password-form"></div>
  </div>
  <div class="col-md-2">
    <% if current_user.username == @user.username %>
        <p><%= link_to 'Edit', users_new_edit_password_path(id: @user.id), :remote=>true , id: 'edit-password' %></p>
    <% else %>
        <br>
    <% end %>
  </div>
</div>
<hr>
<div class="row">
  <div class="col-md-2">
    <% if current_user.username == @user.username  and current_user.username != 'admin' %>
        <p><%= link_to 'Delete account', user_path(@user, to: 'home_page'), method: :delete, data: { confirm: 'Are you sure?' } %></p>
    <% else %>
        <br>
    <% end %>
  </div>
  <div class="col-md-8">
    <br>
  </div>
  <div class="col-md-2">
    <br>
  </div>
</div>